{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "dom",
      "ES2021"
    ],
    "module": "ESNext",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true
  },
  "files": [
    "node_modules/@esri/calcite-components/dist/types/preact.d.ts"
  ],
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}
